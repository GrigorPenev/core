{
    "glueAssets": {
        "gateway": {
            "location": "./node_modules/@glue42/gateway-web/web/gateway-web.js"
        },
        "worker": "./node_modules/@glue42/worker-web/dist/worker.js",
        "config": "./glue.config.json",
        "route": "/glue"
    },
    "server": {
        "settings": {
            "port": 4242,
            "disableCache": true
        },
        "apps": [
            {
                "route": "/",
                "file": {
                    "path": "./"
                }
            },
            {
                "route": "/clients",
                "localhost": {
                    "port": 3000
                }
            },
            {
                "route": "/stocks",
                "localhost": {
                    "port": 3001
                }
            },
            {
                "route": "/details",
                "localhost": {
                    "port": 3002
                }
            }
        ]
    },
    "logging": "dev"
}
